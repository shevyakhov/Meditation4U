<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MusicActivity"
    android:background="@drawable/nature_background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:background="@drawable/nature_background"
        android:src="@drawable/logo" />
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/musicSeekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/musicPlay"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/btnColor"
            android:src="@drawable/ic_play_arrow" />

        <ImageButton
            android:layout_marginHorizontal="40dp"
            android:id="@+id/musicPause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/btnColor"
            android:src="@drawable/ic_baseline_pause"

            />
        <ImageButton
            android:id="@+id/musicStop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_shape"
            android:src="@drawable/ic_baseline_stop"
            android:backgroundTint="@color/btnColor"

            />

    </LinearLayout>
    <Button
        android:id="@+id/musicClose"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@drawable/white_line"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:text="@string/CloseBtn"
        android:background="@drawable/btn_shape"
    />



</LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>